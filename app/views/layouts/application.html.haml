!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Fossography
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    / Custom Fonts
    %link{:href => "/font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
    %script{:src => "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"}
    %script{:src => "https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"}
    
  %body#page-top.index
    .col-md-12{style: "top: 10px; position: absolute"}
      .col-md-11{style: "text-align: right"}
        - if user_signed_in?
          = link_to 'New Proposal', new_seminar_path, style: "color: white"
          &nbsp
          = link_to 'Logout', destroy_user_session_path, method: :delete, style: "color: white"
        - else
          = link_to "Register", "/users/sign_up", style: "color: white"
          &nbsp 
          = link_to "Sign in", "/users/sign_in", style: "color: white"

    = render 'navbar'
    .yield-area= yield
    = render 'footer'


