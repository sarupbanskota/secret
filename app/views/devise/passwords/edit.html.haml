%br
.row
  .col-md-7.col-xs-1.col-sm-1
  .col-md-3.well.col-xs-10.col-sm-10.white{style: "background-color: #2e2e2e"}
    %h4 Change your password
    %br

    = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.hidden_field :reset_password_token
      = f.password_field :password, autofocus: true, autocomplete: "off"
      = f.password_field :password_confirmation, autocomplete: "off"
      = f.submit "Change my password"
