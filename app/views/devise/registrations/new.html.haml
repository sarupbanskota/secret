.row{style: "background-color: #2e2e2e"}
  .col-md-4
  .col-md-4
    %h3 Sign up with Fossography!
    %br

    = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .row
        .col-md-12{style: "color: #737373"}
          Note: Not all attendees have to register, but if you let us know, it helps us calculate better.
          %br
          %br
      .row
        .col-md-6
          = f.text_field :first_name, autofocus: true
        .col-md-6
          = f.text_field :family_name
      .row
        .col-md-12
          = f.email_field :email
      .row
        .col-md-12
          = f.url_field :webpage, value: "http://"
        .col-md-12
          = f.text_field :project
      .row
        .col-md-12
          = f.text_area :bio, help: "Up to 500 characters", style: "height: 100px;"
      .row
        .col-md-4
          = f.select :meal_restriction, [["No Restriction"], ["Gluten Free", "Gluten Free"], ["Hindu Meal", "Hindu Meal"], ["Kosher", "Kosher"], ["Lactose Intolerance", "Lactose Intolerance"], ["Muslim Meal", "Muslim Meal"], ["Vean", "Vean"], ["Vegetarian", "Vegetarian"]]
        .col-md-4
          = f.select :shirt_size, [["No size chosen"], ["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"], ["XXL", "XXL"], ["2XXL", "2XXL"]]
        .col-md-4
          = f.text_field :length_of_stay, hint: "in days, e.g. 5"
      .row
        .col-md-8
          = f.form_group :sponsoring_needed, label: { text: "Sponsoring Needed?" }, help: "Note: Only speakers and attendees from projects who attend an meeting or hackfest are eligible for sponsorship." do
            .row
              .col-md-2
                = f.radio_button :sponsoring_needed, "Yes", label: "Yes"
              .col-md-2
                = f.radio_button :sponsoring_needed, "No", label: "No", checked: true
        .col-md-4
          = f.text_field :sponsorship_amount, help: "Please convert this to USD", label: "Amount in USD", prepend: "USD"
      .row
        .col-md-4
          = f.text_field :arrival_date
        .col-md-4
          = f.text_field :arrival_time
        .col-md-4
          = f.text_field :arrival_flight_number, label: "Arrival flight"
      .row
        .col-md-6
          = f.password_field :password, autocomplete: "off", help: "#{@minimum_password_length} characters minimum"
        .col-md-6
          = f.password_field :password_confirmation, autocomplete: "off"
      .row
        .col-md-12
          = f.submit "Sign up"
          %br
          %br
          You will be sent a confirmation link to the email you specify when you sign up.

      %br
      %br

      = render "devise/shared/links"

      %br
      %br

:javascript
  $('.required').next().css('border', 'solid 2px #aa0019');