<h1>Listing sessions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Headline</th>
      <th>Subline</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Slot</th>
      <th>Confirmed</th>
      <th>Class</th>
      <th>Accepted</th>
      <th>Confirmed</th>
      <th>Track</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.user %></td>
        <td><%= session.headline %></td>
        <td><%= session.subline %></td>
        <td><%= session.description %></td>
        <td><%= session.duration %></td>
        <td><%= session.slot %></td>
        <td><%= session.confirmed %></td>
        <td><%= session.class %></td>
        <td><%= session.accepted %></td>
        <td><%= session.confirmed %></td>
        <td><%= session.track %></td>
        <td><%= session.date %></td>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

