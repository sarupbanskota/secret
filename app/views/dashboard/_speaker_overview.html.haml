%table.table
	%thead
		%th{colspan: "2", style: "color: white"} Speaker Information	
	%tr
		%td Name
		%td 
			= current_user.first_name
			= current_user.family_name
	%tr
		%td Registered Email
		%td= current_user.email

	%tr
		%td Project
		- if current_user.project == ""
			%td None specified
		- else
			%td= current_user.project


	%tr
		%td Webpage
		- if current_user.webpage == "http://"
			%td None specified
		- else
			%td= current_user.webpage


	%tr
		%td Bio
		- if current_user.bio == ""
			%td None specified
		- else
			%td= current_user.bio

%table.table
	%thead
		%th{colspan: "2", style: "color: white"} Logistical Information
	%tr
		%td Shirt Size
		%td= current_user.shirt_size
	%tr
		%td Meal Restrictions
		%td= current_user.meal_restriction 
	%tr
		%td Sponsorship Required
		%td= current_user.sponsoring_needed
	- unless current_user.sponsoring_needed == "No"
		%tr 
			%td Sponsorship Amount
			- if current_user.sponsorship_amount == ""
				%td None specified
			- else 
				%td
					USD
					= current_user.sponsorship_amount
%a{href: "/users/edit"}
	.btn.btn-lg.btn-success Edit Profile