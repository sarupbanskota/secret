- if user_signed_in? and current_user.role == "admin"
	%table.table
		%thead
			%th Size
			%th Count
		%tr
			%td No size provided
			%td= @no_size_count
		%tr
			%td S
			%td= @s_count
		%tr
			%td M
			%td= @m_count
		%tr
			%td L
			%td= @l_count
		%tr
			%td XL
			%td= @xl_count
		%tr
			%td XXL
			%td= @xxl_count
		%tr
			%td 2XXL
			%td= @two_xxl_count
