= bootstrap_form_for(@seminar) do |f|
  - if @seminar.errors.any?
    .alert.alert-danger
      You have errors, please fix them and submit again.


  = f.select :category, [["Select Category"], ["Talk", "Talk"], ["Workshop", "Workshop"], ["Presentation", "Presentation"], ["Demonstration", "Demonstration"], ["Hackfest", "Hackfest"]]
  = f.text_field :headline, help: "Give your proposal a catchy title." 
  = f.text_field :subline
  = f.text_area :description, help: "Explain in detail about what you're proposing."
  = f.text_field :duration, help: "How long is your session estimated to be?"

  - if current_user.role == "admin"

    = f.text_field :slot
    = f.text_field :confirmed
    = f.text_field :accepted
    = f.text_field :confirmed
    = f.text_field :track
    = f.text_field :date

  .actions
    = f.submit