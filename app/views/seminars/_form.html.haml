= form_for(@seminar) do |f|
  - if @seminar.errors.any?
    #error_explanation
      %h2
        = pluralize(@seminar.errors.count, "error")
        prohibited this seminar from being saved:
      %ul
        - @seminar.errors.full_messages.each do |message|
          %li= message

    = f.hidden_field :user_id, value: current_user.id

  .input-group.input-group-lg
    = f.label :category
    %br/
    = f.text_field :category

  .input-group.input-group-lg
    = f.label :headline
    %br/
    = f.text_field :headline

  .input-group.input-group-lg
    = f.label :subline
    %br/
    = f.text_field :subline

  .input-group.input-group-lg
    = f.label :description
    %br/
    = f.text_area :description

  .input-group.input-group-lg
    = f.label :duration
    %br/
    = f.text_field :duration

  - if current_user.role == "admin"

    .input-group.input-group-lg
      = f.label :slot
      %br/
      = f.text_field :slot

    .input-group.input-group-lg
      = f.label :confirmed
      %br/
      = f.text_field :confirmed

    .input-group.input-group-lg
      = f.label :accepted
      %br/
      = f.text_field :accepted

    .input-group.input-group-lg
      = f.label :confirmed
      %br/
      = f.text_field :confirmed

    .input-group.input-group-lg
      = f.label :track
      %br/
      = f.text_field :track

    .input-group.input-group-lg
      = f.label :date
      %br/
      = f.text_field :date

  .actions
    = f.submit